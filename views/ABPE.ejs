<link rel='stylesheet' href='/stylesheets/modal2.css' />
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
<div class="card" id="productos">
    <div class="card-header">
        <h4>Productos en almacén existentes</h4>
    </div>
    <input type="text" id="buscar" oninput="buscar()" placeholder="BUSCAR EN TABLA"
        title="Empieza a escribir para buscar">
    <div class="card-body">
        <div class="table-responsive">
            <table id="DatosProd">
                <thead>
                    <tr id="firstrow">
                        <th>Código de barras</th>
                        <th>Categoría</th>
                        <th>Nombre del artículo</th>
                        <th>Marca del artículo</th>
                        <th>Descripción</th>
                        <th>Unidad</th>
                        <th>En Existencia</th>
                        <th>Añadir</th>
                        <th>Sacar</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="pen">
    <div class="controls">
    </div>
    <div class="overlay cancel-modal"></div>
    <div class="modal-container cancel-modal">
        <div class="Contenedor Contenido-centrado Alta">
            <form name="AltaExist" id="AltaExist">
                <div class="Cuatro_Column">
                    <div>
                        <label>Fecha de Ingreso</label>
                        <input autocomplete="off" type="date" id="FecActu" name="FecActu" required>
                    </div>
                    <div>
                        <label>Cantidad</label>
                        <input autocomplete="off" type="number" id="CantidadPM" name="CantidadPM" required min="0">
                    </div>
                    <div>
                        <label>Proveedor</label>
                        <input autocomplete="off" type="text" id="ProveedorM" name="ProveedorM" required maxlength="45"
                            oninput="mayus(this)">
                    </div>
                    <div>
                        <label>Número de Factura</label>
                        <input autocomplete="off" type="text" id="NumFactM" name="NumFactM" required maxlength="10"
                            oninput="mayus(this)">
                    </div>
                    <div>
                        <label>Fecha de Factura</label>
                        <input autocomplete="off" type="date" id="FecFact" name="FecFact">
                    </div>
                </div>
                <div class="Cuatro_Column">
                    <input type="submit" id="Modify" class="BotonAE" value="Aceptar">
                    <input type="button" class="BotonReg" value="Cancelar">
                </div>
            </form>
        </div>
    </div>
</div>

<div class="Contenedor_Modal ContMod1">
    <div class="modal modal1-close mod1 modC1">
        <div class="header-modal">
            <h5 id="TituloEliminar" style="padding-bottom: 1rem;"></h5>
            <p class="close title_modal" onclick="Cerrar1()">X</p>
        </div>
        <div style="width: 80%;">
            <form id="BajaExist" name="BajaExist">
                <div>
                    <label>Cantidad de productos a sacar</label>
                    <input autocomplete="off" type="number" id="CantidadP" name="CantidadP" required min="1"
                        oninput="mayus(this)">
                </div>
                <div>
                    <label>¿Quién requiere este producto?</label>
                    <select id="NombreEmp" required style="width: 100%;">
                        <option value=""></option>
                    </select>
                </div>
                <div class="Dos_Columnas">
                    <input type="submit" class="BotonAE" id="ExcelDownload" value="Aceptar">
                    <input type="button" class="BotonCancelar" onclick="Cerrar1()" value="Cancelar">
                </div>
            </form>
        </div>
    </div>
</div>
<script src="/javascripts/modalAltProd.js" type="text/javascript"></script>
